<div class="edit-dog">
  <LinkTo @route="index" class="button" style="margin:2em 0 1em">Back</LinkTo>
  <div class="edit-delete">
    <h2>Edit a dog</h2>
    <button class="delete-button" type="button" {{on "click" (fn this.delete @model.id)}}>Delete</button>
  </div>
  <Dog::Detailed @dog={{@model}} @update={{this.update}}/>
</div>